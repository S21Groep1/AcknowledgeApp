@model ActionPointStarrViewModel

@section Styles {
    <link href="@Url.Content("~/css/StarrPageStyle.css")" rel="stylesheet" type="text/css" />
}

@section Scripts {
    <script src="~/js/StarrPageScript.js"></script>  
}

@{
    ViewData["Title"] = "STARR";
}

<div class="container">
    <div class="container-fluid" style="background-color: white; border-radius: 25px;">
        <div class="row content">
            <div class="text-center">
                <h1 style="color: #0082CA">STARR</h1>
                <hr>
                <div class="formwrapper">
                    <div class="form-group">
                        <form method="post">
                            <div class="form-group">
                                <label asp-for="@Model.starr.Name"></label>
                                <input asp-for="@Model.starr.Name" class="form-control" required="Required" />
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.coachName"></label>
                                <select asp-for="@Model.coachName" required class="form-control">
                                    @foreach (string coach in Model.Coaches)
                                    {
                                        <option>@coach</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.starr.Situation"></label>
                                <textarea asp-for="@Model.starr.Situation" class="form-control" required="Required"></textarea>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.starr.Task"></label>
                                <textarea asp-for="@Model.starr.Task" class="form-control" required="Required"></textarea>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.starr.Action"></label>
                                <textarea asp-for="@Model.starr.Action" class="form-control" required="Required"></textarea>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.starr.Result"></label>
                                <textarea asp-for="@Model.starr.Result" class="form-control" required="Required"></textarea>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.starr.Reflection"></label>
                                <textarea asp-for="@Model.starr.Reflection" class="form-control" required="Required"></textarea>
                            </div>
                            <hr>
                            <div id="smileys">
                                <input asp-for="@Model.starr.Feeling" type="radio" value="1" class="sad" />
                                <input asp-for="@Model.starr.Feeling" type="radio" value="2" class="neutral" />
                                <input asp-for="@Model.starr.Feeling" type="radio" value="3" class="neutral" />
                                <input asp-for="@Model.starr.Feeling" type="radio" value="4" class="happy" />
                            </div>


                            <button type="submit" class="btn btn-default">Submit</button>
                            <!-- <a class="btn btn-success" data-toggle="modal" href="#coachModal">Add Coach</a> -->
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>