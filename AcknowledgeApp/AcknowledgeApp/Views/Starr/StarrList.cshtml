@model StarrListViewModel

@section Styles {
    <link href="@Url.Content("~/css/StarrListStyle.css")" rel="stylesheet" type="text/css" />
}

@section Scripts {
    <script src="~/js/StarrListScript.js"></script>
}

@{
    ViewData["Title"] = "StarrList";
}

<div class="container">
    <div class="container-fluid" style="background-color: white; border-radius: 25px;">
        <div class="row content">
            <div class=" text-center">
                <h1 style="color: #0082CA">STARR List</h1>
                <h4 class="text-center"> All STARR forms</h4>
                <hr>
                <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search">
                <br>
                <table id="myTable">
                    <tr class="header">
                        <th style="width:30%;" onclick="sortTable(0)">Title</th>
                        <th style="width:20%;" onclick="sortTable(1)">Date</th>
                        <th style="width:20%;" onclick="sortTable(2)">Coach</th>
                        <th style="width:10%;"></th>
                        <th style="width:10%;"></th>
                        <th style="width:10%;"></th>
                    </tr>
                    @foreach (var starrform in Model.Starrs)
                    {
                        <tr>
                            <td>@starrform.Name</td>
                            <td>@starrform.LastEdit</td>
                            <td>@starrform.Coach</td>
                            <td><a asp-action="EditStarr" asp-route-id="@starrform.Id"><span class="glyphicon glyphicon-pencil"></span></a></td>
                            <td><a asp-action="PrintStarr" asp-route-id="@starrform.Id"><span class="glyphicon glyphicon-print"></span></a></td>
                            <td><a asp-action="AddActionPoint" asp-route-id="@starrform.Id"><span class="glyphicon glyphicon-plus"></span></a></td>
                        </tr>
                    }
                </table>
                <br>
            </div>
        </div>
    </div>
</div>
<div style="height: 30px;"></div>

