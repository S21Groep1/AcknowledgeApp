@model ActionPointStarrViewModel

@section Styles {
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <style>

        #sortable1, #sortable2 {
            border: 1px solid #eee;
            width: 142px;
            min-height: 20px;
            list-style-type: none;
            margin: 0;
            padding: 5px 0 0 0;
            float: left;
            margin-right: 10px;
            padding-bottom: 5px;
        }

            #sortable1 li, #sortable2 li {
                margin: 0 5px 5px 5px;
                padding: 5px;
                font-size: 1.2em;
                width: 120px;            
            }
    </style>
}

@section Scripts {

    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#sortable1, #sortable2").sortable({
                connectWith: ".connectedSortable"
            }).disableSelection();
        });
    </script>
}

@{
    ViewData["Title"] = "AddActionPoint";
}
    <div class="container" style="text-align: center">
        <div class="container-fluid" style="background-color: white; border-radius: 25px;" >
            <h2>AddActionPoint</h2>
            <h4>@Model.starr.Name</h4>
            <div style="text-align: center">
                <ul id="sortable1" class="connectedSortable">
                    <li class="ui-state-default">Improve documenting</li>
                </ul>
                <ul id="sortable2" class="connectedSortable">
                    @foreach (var ap in Model.starr.Actionpoints)
                    {
                        <li class="ui-state-default">@ap.Specific</li>
                    }
                </ul>
            </div>         
        </div>      
    </div>
