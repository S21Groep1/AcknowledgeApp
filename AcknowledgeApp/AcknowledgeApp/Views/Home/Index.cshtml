@using Models
@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/HomeIndexStyle.css" />
    <title>Acknowledge</title>
</head>
<body>
    <div class="container">
        <div class="row" id="pwd-container">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <section class="login-form">
                    <!-- <input asp-for="model">  has to be add when outsourcing is done-->
                    <form asp-controller="Home" asp-action="HomePage" method="post" role="login">
                        <img src="~/images/header-logo.png" class="img-responsive" alt="" />
                        <input type="email" name="email" placeholder="Email" required class="form-control input-lg" />
                        <input type="password" class="form-control input-lg" id="password" placeholder="Password" required="" />
                        <div class="pwstrength_viewport_progress"></div>
                        <button type="submit" name="go" class="btn btn-lg btn-success btn-block">Sign in</button>
                        <div>
                            <p class="createLabel">@Html.ActionLink("Reset password", "Reset", "Home")</p>
                        </div>
                    </form>
                    @*@Html.ActionLink("link text", "someaction", "somecontroller", new { id = "123" }, null)
                    @Url.Action("Reset", "Home")*@
                </section>

            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
</body>
</html>
