@model Models.Authentication

@{
    ViewData["Title"] = "Login";
}

@section Styles{
    <link href="@Url.Content("~/css/TwoFactorIndexStyle.css")" rel="stylesheet" type="text/css" />
}

<div class="login-form">
    @using (Html.BeginForm("Index", "TwoFactor", FormMethod.Post))
    {
        <table>
            <tr>
                <td></td>
                <!-- <img src="https://werkenbij.acknowledge.nl/themes/acknowledge/img/header-logo.png" alt="Acknowledge" style="top: 11px; left: 11px; width: 283px; height: 54px;"> -->
                <h4 style="color: #ffffff; text-align: center; ">Voer uw Authenticatie code in !</h4>
            </tr>

            <div class="form-group">
                @Html.LabelFor(model => Model.AuthenticationCode, htmlAttributes: new { @class = "control-label col-sm-12" })

                <div class="col-sm-12">
                    @Html.EditorFor(model => Model.AuthenticationCode, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => Model.AuthenticationCode, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-12">
                    <br />
                </div>
            </div>

            <tr>
                <td>@ViewData["ErrorMessage"]</td>
            </tr>
            <button type="submit" class="btn btn-success btn-block">Log in</button>
            <button type="reset" name="name" value="Clear" class="btn btn-succes btn-block">Clear</button>

        </table>
    }
</div>